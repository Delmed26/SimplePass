<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimplePass.App">
    <Application.Resources>
        <ResourceDictionary>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#6C51C8"/>
                <Setter Property="BarTextColor" Value="White"   />

            </Style>
            <Color x:Key="principalColor">#6C51C8</Color>
            <Color x:Key="principalColorDark">#533E99</Color>
            <Color x:Key="backgroundColor">#FAFAFA</Color>
            <Color x:Key="fontColor">#1F1F1F</Color>
            <Color x:Key="backgroundEntry">#EBEBEB</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>